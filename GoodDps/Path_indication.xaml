<Window x:Class="GoodDps.Path_indication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodDps"
        mc:Ignorable="d"
        Title="Path indication" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal">

            <Label Content="Path" HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MinWidth="50"/>
            <TextBox x:Name="PathFolder" Text="Path" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" MinHeight="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MinWidth="100" IsReadOnly="True"/>
            <Button Content="Search" HorizontalAlignment="Right" VerticalAlignment="Top" MinHeight="30" MinWidth="50" Click="Button_Click"/>

    </StackPanel>
</Window>
